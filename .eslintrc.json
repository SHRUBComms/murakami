{
  "env": {
    "browser": true,
    "commonjs": true,
    "es2021": true
  },
  // "extends": "google",

  "extends": ["eslint:recommended", "plugin:prettier/recommended"],
  "plugins": ["prettier", "@stylistic/js"],
  "parserOptions": {
    "ecmaVersion": "latest"
  },
  "rules": {
    "no-var": "error", // Disallow the use of 'var'
    "prefer-const": "error", // Suggest 'const' if a variable is never reassigned
    "eqeqeq": ["warn", "always"], // Enforce the use of '==='
    "prettier/prettier": "error"
  }
}
