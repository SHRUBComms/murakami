			quantityColumnInput.onclick = function(){
				//quantityColumnInput.select()
				//console.log(quantityColumnInput)
			}

			quantityColumnInput.oninput = function(){
				updateTransactionQty(i)
				if(transaction.length > 0){
					var tokens_total = 0;
					var weight_total = 0;
				}
				updateButtons();
			}

			quantityColumnInput.onblur = function(){
				updateTransactionQty(i)
				if(transaction.length > 0){
					var tokens_total = 0;
					var weight_total = 0;
				}
				updateButtons();
			};
			quantityColumn.append(quantityColumnInput)
