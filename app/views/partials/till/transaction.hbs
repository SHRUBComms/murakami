function updateButtons(){
	tokens_total = 0;
	weight_total = 0;
	money_total = 0;
	value_total = 0;
	real_total_transaction_value = 0;
	total_discount_percentage = 0;
	total_discount_absolute = 0;
	giftcard_value = 0;
	contains_real_items = false;

	// Calculating total values - weight, money.
	for(let i = 0; i < transaction.length; i++)
	{
		if(transaction[i].discount == 1) 
		{
			total_discount_percentage = transaction[i].value;
		} 
		else if(transaction[i].discount == 2) 
		{
			total_discount_absolute = transaction[i].value;
		} 
		else if(transaction[i].giftcard == true) 
		{
			giftcard_value = transaction[i].value;
		} 
		else {
			contains_real_items = true;

			

			var total_modifier = +(transaction[i].value * transaction[i].quantity);
			real_total_transaction_value += total_modifier;

			if(member.name) {
				total_modifier = +((transaction[i].value * transaction[i].quantity) - ((transaction[i].value * transaction[i].quantity) * (transaction[i].member_discount/100)));
			}

			if(transaction[i].allowTokens == 1){
				tokens_total += +(total_modifier);
			} else {
				money_total += +(total_modifier);
			}

			//console.log("transation[i].weight: " + transaction[i].weight);
			//console.log("transation[i].quantity: " + transaction[i].quantity);

			weight_total += +(transaction[i].weight * transaction[i].quantity);
		}
	}


  giftcard_balance = giftcard_value;
  
  // Apply discounts
  money_total -= money_total * (total_discount_percentage / 100);
  money_total -= total_discount_absolute;
  
  if(money_total < 0) {
    money_total = 0;
  }

  // Remove money from gift card	
  if(money_total > giftcard_value) {
    giftcard_balance = 0;
  } else {
    if(giftcard_value > 0) {
      giftcard_balance -= money_total;
    }
  }

  // Taking giftcard value off money
  money_total = money_total > giftcard_value ? money_total - giftcard_value : 0;

  tokens_total -= tokens_total * (total_discount_percentage / 100);
  tokens_total -= total_discount_absolute;
  
  if(tokens_total < 0) {
    tokens_total = 0;
  }

  if(tokens_total > giftcard_balance) {
    giftcard_balance = 0;
  } else {
    if(giftcard_value > 0) {
      giftcard_balance -= tokens_total;
    }
  }

  tokens_total = tokens_total > giftcard_value ? tokens_total - giftcard_value : 0; 
 
  $("#newGiftcardBalance").text(giftcard_balance.toFixed(2));

  value_total = (tokens_total + money_total);

	// Set element text to calculated values
	$("#tokens_total").html(value_total.toFixed(2));
	$("#money_total").html(real_total_transaction_value.toFixed(2));
	$("#weight_subtotal").html(weight_total.toFixed(0));
	$("#weight_total").html(weight_total.toFixed(0));

	if(transaction.length > 0 && contains_real_items)
	{
		$("#tokens_total").text((value_total).toFixed(2));
		$("#changeCalc").addClass("d-none");
		$("#giftcardBalanceSummary").addClass("d-none");
			
		if(giftcard_value > 0) {
		$("#giftcardBalanceSummary").removeClass("d-none");
		$("#currentGiftcardBalance").text(Number(giftcard_value).toFixed(2));
		}


		if(money_total == 0 && tokens_total == 0)
		{
			// Nothing for customer to pay.
			$("#selectPaymentMethod").addClass("d-none");
			$(".transaction-total").html("Pay <b>nothing</b>!")
			$("#payButton").prop("disabled", true)
			$("#payButton")[0].style.cursor = "default"
		} 
		else if(member.name && payWithTokens)
		{
			// Customer is member and is paying with tokens.
			$("#payButton")[0].style.cursor = "pointer"
			$("#payButton").prop("disabled", false)
			if(money_total == 0)
			{
				if(member.balance >= tokens_total)
				{
					$("#selectPaymentMethod").addClass("d-none");
					if(Math.ceil(tokens_total) == 1)
					{
						$(".transaction-total").html("Pay <b>" + Math.ceil(tokens_total) + " token</b>")
					} 
					else 
					{
						$(".transaction-total").html("Pay <b>" + Math.ceil(tokens_total) + " tokens</b>")
					}

				} 
				else 
				{
					let difference = tokens_total - member.balance;
					$(".transaction-total").html("Pay <b>£" + (difference).toFixed(2) + "</b> and <b>" + (tokens_total - difference) +  " tokens</b>")
					$("#selectPaymentMethod").removeClass("d-none");
					global_money_total = (difference).toFixed(2);
				}
			} 
			else 
			{
				let difference = member.balance - tokens_total;
				var money = 0;
				var tokens = 0;

				if((member.balance - tokens_total) >= 0)
