		valueColumnInput.id = "inputValue_" + i;
		valueColumn.append(valueColumnInput)
		
		valueColumnInput.oninput = function(){
			updateTransactionValue(i)
			if(transaction.length > 0){
				var tokens_total = 0;
				var weight_total = 0;
			}
			updateButtons();
		};

		valueColumnInput.onblur = function(){
			updateTransactionValue(i)
			if(transaction.length > 0){
