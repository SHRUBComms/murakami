var transaction = [];

var tokens_total = 0;
var weight_total = 0;
var money_total = 0;
var global_money_total = 0;
var real_total_transaction_value = 0;

var paymentMethod;

var itemToAdd = {};

var payWithTokens = false;
var results = [];
var member = {};


if (navigator.appVersion.includes("Android") || navigator.appVersion.includes("Apple")){
  $("#cardOption").removeClass("d-none");
} else {
