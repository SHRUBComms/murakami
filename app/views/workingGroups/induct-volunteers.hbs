<!-- Latest compiled and minified CSS -->
<link rel="stylesheet" href="//cdnjs.cloudflare.com/ajax/libs/bootstrap-table/1.12.1/bootstrap-table.min.css">

<!-- Latest compiled and minified JavaScript -->
<script src="//cdnjs.cloudflare.com/ajax/libs/bootstrap-table/1.12.1/bootstrap-table.min.js"></script>

<div class="row">
	<h1>{{group.name}} Volunteers</h1>
</div>

{{#ifGreaterThan user.working_groups.length 1}}
<div class="row">
  <div class="form-group form-inline">
    <select class="form-control" id="working_groups">
      <option disabled selected>Select a working group...</option>
        {{#each user.working_groups}}
          <option value='{{group_id}}'{{#ifCond group_id '==' ../group.group_id}}selected{{/ifCond}}>{{name}}</option>
        {{/each}}
    </select>
  </div>
</div>
{{/ifGreaterThan}}


<div class="row">  
  <div class="col-lg-6 nopadding">

    <h3>Existing Volunteers</h3>

    <table id="group_members" class="fadeIn" data-pagination="true" data-search="true" data-toggle="table" data-striped="true" data-url="/api/get/working-groups/volunteers/{{group.group_id}}" data-show-export="true" data-export-options='{
                                  "fileName": "{{working_group.name}} members", 
                                  "ignoreColumn": [2]
                                }'>
      <thead>
        <th data-sortable="true" data-field="name">Name</th>
        <th data-sortable="true" data-field="volunteerInfoLastUpdated" class="hidden-xs hidden-sm">Last Updated</th>
        <th data-field="options"></th>
      </thead>
      <tbody>

      </tbody>
    </table>
  </div>

  <div class="col-lg-5 col-lg-offset-1">
    <h3>Induct Volunteers</h3>
    <div class="form-group">
      <input type="text" id="memberInput" class="form-control" placeholder="Search for a member..." oninput="search()" />
    </div>

    <div class="row">
      <div class='col'>
        <div id="searchOutput"></div>
      </div>
    </div>    
  </div>

</div>

<script>
$('#working_groups').on('change', function () {
  var url = "/working-groups/induct-volunteers/" + $(this).val();
  window.location = url;
});

function updateSearchOutput(results){
  $('#searchOutput').html("<br />");

  if(results.length == 0) {
    $('#searchOutput').html($('#searchOutput').html() + "<div class='member-result'>" +
      "<p class='text-center'>Nothing found :'( - <a href='/members/add' target='_blank'>add a new member</a></p>" +
      "</div>");
  } else {
    for(let i=0;i<results.length;i++){

      var membershipBtn = "<a class='btn btn-success' target='_blank' href='/members/volunteer-info/" + results[i].id + "'>Make " + results[i].first_name + " A Volunteer</a>"

      
      $('#searchOutput').html($('#searchOutput').html() + 
        "<div class='member-result text-center'>" +
          "<p><b>" + 
          "<a href='/members/view/" + results[i].id + "' target='_blank'>" +
            results[i].name + 
          "</a>" +
          "</p></b>" +

          "<p>" + 
            results[i].email + 
          "</p>" +

          "<center>" + 
            membershipBtn +
          "</center>" +
        "</div>"
      );

      if((i + 1) != results.length){
        $('#searchOutput').html($('#searchOutput').html() + "<hr />")
      }

      var found = false;
    }
  }
}
function search(){
  $.ajax({
      type: "POST",
      url: "/api/post/working-groups/search",
      data: { 
          'term': $('#memberInput').val(),
          'group_id': "{{{group.group_id}}}"
      },    
      success: function(response){

        if(response.status == "ok"){
          updateSearchOutput(response.results);
        } else {
          $('#searchOutput').html("Something went wrong!");
        }  
      }
  });
}
</script>