
{{#if user}}
  <form method="post" action="{{public_address}}/volunteers/add" class="form-group" autocomplete="off">
{{else}}
  <form method="post" action="{{public_address}}/volunteers/invite/add-volunteer/{{invite.token}}" class="form-group" autocomplete="off">
{{/if}}
    <div class="row mt-4 mb-4">
      <div class="col-xl-5 col-lg-6 mx-auto">

        {{> members/add addingVolunteer='true'}}
      </div>
      <div class="col-xl-5 col-lg-6 mx-auto">
        {{> volunteers/add}}
      </div>
    </div>

    <div class="row">
      <div class="col-md-8 mx-auto">
        <input type="submit" class="btn btn-block btn-lg btn-success" value="Add Volunteer">
      </div>
    </div>

</form>
