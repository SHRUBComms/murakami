<form method="post" action="{{public_address}}/members/update/{{member_id}}" class="form-group">

  <div class="row mt-4 mb-4">
  	<div class="col-lg-4 mx-auto">
  		<div class="card mb-4">
  			<div class="card-body">

          <h3 class="mb-2">Personal Details</h3>

          <div class="row mb-3">
            <div class="col-md-6">
              <input type="text" class="form-control mr-sm-1 mr-md-1 mb-sm-1 mb-md-1" placeholder="First Name" name="first_name"name="first_name"{{#if first_name}} value="{{first_name}}"{{/if}} required />
            </div>
            <div class="col-md-6">
              <input type="text" class="form-control" placeholder="Last Name"name="last_name"{{#if last_name}} value="{{last_name}}"{{/if}} required />
            </div>
          </div>

        </div>
      </div>


      {{#ifUserClass user.class '["admin", "staff"]'}}
        <div class="card mb-4">
    			<div class="card-body">

            <h3 class="mb-2">Contact Details</h3>

            <input type="email" class="form-control mb-2" placeholder="Email" name="email"{{#if email}} value="{{email}}"{{/if}}>

            <input type="text" class="form-control mb-2" placeholder="Phone Number (optional)" name="phone_no"{{#if phone_no}} value="{{phone_no}}"{{/if}}>

            <textarea type="text" class="form-control mb-2" placeholder="Address (optional)" name="address"{{#if address}} value="{{address}}"{{/if}}></textarea>
          </div>
        </div>

        <div class="card mb-4">
          <div class="card-body">
            <h3 class="mb-2">Membership Info</h3>

              <select class="form-control" name="free">
                <option value="paid" {{#unless free }}selected{{/unless}}>Paid Membership</option>
                <option value="free" {{#if free}}selected{{/if}}>Free Membership (as volunteer)</option>
              </select>

              {{#ifUserClass user.class '["admin"]'}}
                <select class="form-control mt-2" name="membership_type" required>
                  <option value="none" {{#unless membership_type}}selected{{/unless}}>No special status</option>
                  <option value="staff" {{#ifCond membership_type '==' 'staff'}}selected{{/ifCond}}>Staff</option>
                  <option value="trustee" {{#ifCond membership_type '==' 'trustee'}}selected{{/ifCond}}>Trustee</option>
                  <option value="lifetime" {{#ifCond membership_type '==' 'lifetime'}}selected{{/ifCond}}>Honorary Lifetime Member</option>

                </select>
              {{/ifUserClass}}


              <div class="form-group row mt-3">
                <label for="staticEmail" class="col-sm-5 col-form-label">Membership expires</label>
                <div class="col-sm-7">
                  <input type="date" class="form-control" name="current_exp_membership" value="{{current_exp_membership}}" required />
                </div>
              </div>

          </div>
        </div>

      {{/ifUserClass}}



      <div class="row mt-4">
        <div class="col-md-12">
          <button type="submit" class="btn btn-block btn-lg btn-primary">Update Member</button>
        </div>
      </div>
    </div>
  </div>

</form>
