<link href="https://gitcdn.github.io/bootstrap-toggle/2.2.2/css/bootstrap-toggle.min.css" rel="stylesheet">
<script src="https://gitcdn.github.io/bootstrap-toggle/2.2.2/js/bootstrap-toggle.min.js"></script>

<div class="row">
  <h1>General Settings</h1>
</div>

<form action="/settings/general" method="post">
  
  <div class="row">
    <div class="form-group form-inline">
    	<p>Allow account recovery&emsp;
    		<input type="checkbox" data-toggle="toggle" data-on="yes" data-off="no" name="password_reset" {{#if settings.password_reset}}checked{{/if}}>
    	</p>
    </div>
  </div>

  <div class="row">
    <div class="form-group form-inline">
      <div class="form-group">
          <button type="submit" class="btn btn-primary form-control">Update Settings</button>
        </div>
    </div>
  </div>

</form>