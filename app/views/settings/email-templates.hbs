<!-- include summernote css/js -->
<link href="https://cdnjs.cloudflare.com/ajax/libs/summernote/0.8.11/summernote-bs4.css" rel="stylesheet">
<script src="https://cdnjs.cloudflare.com/ajax/libs/summernote/0.8.11/summernote-bs4.js"></script>

<!-- Include bootstrap checkbox style thing -->
<link href="https://gitcdn.github.io/bootstrap-toggle/2.2.2/css/bootstrap-toggle.min.css" rel="stylesheet">
<script src="https://gitcdn.github.io/bootstrap-toggle/2.2.2/js/bootstrap-toggle.min.js"></script>

<form action="{{public_address}}/settings/email-templates/{{template.mail_id}}" method="POST">


      <div class="row mt-4">
        <div class="col-md-8 mx-auto">
          <div class="form-group form-inline">
            <select class="form-control" id="templates">
              <option selected disbaled>Select an email template...</option>
              {{#each templates}}
                  <option value="{{mail_id}}" {{#ifCond mail_id '==' ../template.mail_id}}selected{{/ifCond}}>
                    {{mail_desc}}
                  </option>
              {{/each}}
            </select>
          </div>
        </div>
      </div>


      <div class="row mt-4">
        <div class="col-md-8 mx-auto">
          <div class="card px-4">
            <div class="card-body">

              <div class="row">
                <p{{#ifCond template.mail_id '==' 'footer'}} class="mb-2"{{/ifCond}}>
                  This template is currently
                  {{#if template.active}}
                    <span class="text-success">enabled</span>
                  {{else}}
                    <span class="text-danger">disabled</span>
                  {{/if}}
                </p>
              </div>
              {{#ifCond template.mail_id '!=' 'footer'}}
                <div class="row">
                  <p class="mb-2">
                    Footer template is currently
                    {{#if footer.active}}
                      <span class="text-success">enabled</span>
                    {{else}}
                      <span class="text-danger">disabled</span>
                    {{/if}}
                  </p>
                </div>
              {{/ifCond}}
              <div class="row">
                <div id="preview" style="width: 100%;">

                  <h4{{#ifCond template.mail_id '==' 'footer'}} class="mb-2"{{/ifCond}}>Preview</h4>


                  {{#ifCond template.mail_id '!=' 'footer'}}
                    <p>From: <b>Shrub Co-op</b></p>
                    <p class="mb-2">Subject: <b id="subject-preview"></b></p>
                  {{/ifCond}}
                  <div style="border: 1px grey solid; padding: 25px; width: 100%;">
                    <div id="preview-content">

                    </div>
                    {{#ifCond template.mail_id '!=' 'footer'}}
                      {{#if footer.active}}
                        <div id="footer">
                          <hr />
                          {{{footer.markup}}}
                        </div>
                      {{/if}}
                    {{/ifCond}}
                  </div>



                </div>
              </div>

            </div>
          </div>
        </div>
      </div>


      <div class="row mt-4">
        <div class="col-md-8 mx-auto">
          <div class="card px-4">
          <div class="card-body">

            <div class="row mb-4 no-gutters">
                <div class="col mb-4">
                  {{#ifCond template.mail_id '!=' 'footer'}}
                    <input type="text" name="subject" id="subject" style="width: 100%; margin-bottom: 15px;" oninput="update_preview()" class="form-control" value="{{template.subject}}">

                  {{/ifCond}}

                  <input type="checkbox" data-toggle="toggle" data-on="Enabled" data-off="Disabled" name="templateActive" id="templateActive" {{#if template.active}}checked{{/if}} />
                  <div class="row mt-4">
                    <div class="col-md-12">
                      <div id="editor" oninput="update_preview()" onblur="update_preview()">
                          {{{template.markup}}}
                      </div>
                      <input type="hidden" name="markup" id="markup" value="{{template.markup}}">
                    </div>
                  </div>

                </div>



            </div>

            {{#ifCond template.mail_id '!=' 'footer'}}

              <div class="row mt-4">
                  <div id="mail_info">
                      <p>To include personalised information in the body of an email, please use a | (vertical line symbol) at the start and end of its reference name</p>
                      <p>Find below the personalised information you can use, and their reference names.</p>
                      <ul>
                          <li><b>first_name</b> - the recipient's first name</li>
                          <li><b>last_name</b> - the recipient's last name</li>
                          <li><b>fullname</b> - the recipient's full name</li>
                          <li><b>exp_date</b> - the date the recipient's membership will end</li>
                          <li><b>balance</b> - the recipient's current balance</li>
                          {{#ifCond template.mail_id '==' 'donation'}}
                            <li><b>tokens</b> - the amount of tokens given to member after donation</li>
                          {{/ifCond}}
                          <li><b>roles</b> - lists assigned volunteer role(s)</li>
                          <li><b>wg_summary</b> - adds working group welcome message(s)</li>
                      </ul>
                  </div>
              </div>

              {{/ifCond}}

          </div>
        </div>
        </div>
      </div>



      <div class="row mt-4">
        <div class="col-md-8 mx-auto">
          <input type="submit" class="btn btn-primary btn-block btn-lg" value="Update Template">
        </div>
      </div>


</form>


<script>

$('#templates').on('change', function () {
    var url = "{{public_address}}/settings/email-templates/" + $(this).val();
    window.location = url;
});

function update_preview(){
    var raw_markup = $("#editor").summernote('code');
    $("#markup").val(raw_markup.trim());
    var modified_markup;
    modified_markup = raw_markup.replace(/\|first_name\|/g, "Ringo")
                                .replace(/\|last_name\|/g, "Starr")
                                .replace(/\|fullname\|/g, "Ringo Starr")
                                .replace(/\|exp_date\|/g, "September 20th 2023")
                                .replace(/\|membership_id\|/g, "64917625122")
                                .replace(/\|balance\|/g, "11")
                                .replace(/\|tokens\|/g, "4")
                                .replace(/\|wg_summary\|/g, "{{{group.welcomeMessage}}}")
                                .replace(/\|roles\|/g, "<ul><li><a href='#'>Shop Assistant</a></li></ul>");
    {{#ifCond template.mail_id '!=' 'footer'}}
      $("#subject-preview").html($("#subject").val());
    {{/ifCond}}
    $("#preview-content").html(modified_markup.trim());
}

$("document").ready(function(){
    $('#editor').summernote();
    update_preview();
});

$('#editor').on('summernote.change', function(we, contents, $editable) {
  update_preview();
});

</script>
